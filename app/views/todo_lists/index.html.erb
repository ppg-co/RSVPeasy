<h1>Task Lists for <%= @event.name %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr>
        <td><%= todo_list.title %></td>
        <td><%= todo_list.description %></td>
        <td><%= link_to 'Show/Add Tasks', event_todo_list_path(@event, todo_list) %></td>
        <td><%= link_to 'Edit', edit_event_todo_list_path(@event, todo_list) %></td>
        <td><%= link_to 'Delete', event_todo_list_path(@event, todo_list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task List', new_event_todo_list_path(@event), {:style=>'color:#WWWWWW;', :class => "btnC"} %>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
<%= link_to 'Back to Event', event_path(@event), {:style=>'color:#WWWWWW;', :class => "btnC"} %>
