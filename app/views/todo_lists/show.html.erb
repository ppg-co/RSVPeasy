<h2 class="todo_list_title"><%= @todo_list.title%></h2>
<p class="todo_list_sub_title"><%= @todo_list.description %></p>
<div id="todo_items_wrapper">
 <%= render @todo_list.todo_items %>
 <div id="form">
  <%= render "todo_items/form" %>
 </div>
 <h1>Number of Tasks created</h1>
 <%= line_chart TodoItem.group_by_day(:created_at).count %>
</div>
<div class="links">
 <%= link_to 'Edit', edit_todo_list_path(@todo_list), {:style=>'color:#000000;', :class => "h2"} %> |
 <%= link_to 'Delete', todo_list_path(@todo_list), method: :delete, data: { confirm: "Are you sure?"}, :style=>'color:#000000;', :class => "h2" %> |
 <%= link_to 'Back', todo_lists_path, {:style=>'color:#000000;', :class => "h2"} %>
</div>
