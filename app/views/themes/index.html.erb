<!-- Masthead -->
 <header class="masthead">
   <div class="container h-100">
     <div class="row h-100 align-items-center justify-content-center text-center">
       <div class="col-lg-10 align-self-end">
         <h1 class="text-uppercase text-white font-weight-bold">Welcome to RSVPeasy!</h1>
         <hr class="divider light my-4">
       </div>
       <div class="col-lg-8 align-self-baseline">
         <p class="text-white-75 font-weight-light mb-5">The easy to use events management system that will keep track of your event responses and more</p>
       </div>
     </div>
   </div>
 </header>

 <!-- About Section -->
 <section class="page-section bg-navbarColor01" id="about">
   <div class="container">
     <div class="row justify-content-center">
       <div class="col-lg-8 text-center">
         <h2 class="text-navy mt-0">We've got what you need!</h2>
         <hr class="divider light my-4">
         <p class="text-navy-50 mb-4">We're here to make things as simple as possible so you can focus on your event being its best</p>
         <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Get Started!</a>
       </div>
     </div>
   </div>
 </section>

 <!-- Services Section -->
 <section class="page-section" id="services">
   <div class="container">
     <h2 class="text-center mt-0">At Your Service</h2>
     <hr class="divider light my-4">

     <div class="row">
       <div class="col-lg-3 col-md-6 text-center">
         <div class="mt-5">
           <img src="<%= asset_path('tick.png') %>" width="50" height="50">
           <h3 class="h4 mb-2">Response</h3>
           <p class="text-muted mb-0">Keep track of all your RSVPs</p>
         </div>
       </div>
       <div class="col-lg-3 col-md-6 text-center">
          <div class="mt-5">
            <img src="<%= asset_path('clipboard.png') %>" width="50" height="50">
            <h3 class="h4 mb-2">Task List</h3>
           <p class="text-muted mb-0">Keep track of all your tasks pertaining to your events.</p>
         </div>
       </div>
       <div class="col-lg-3 col-md-6 text-center">
         <div class="mt-5">
           <img src="<%= asset_path('email.png') %>" width="50" height="50">
           <h3 class="h4 mb-2">Send E-Vite</h3>
           <p class="text-muted mb-0">Help save a tree by sending linkable electronic invitations</p>
         </div>
       </div>
       <div class="col-lg-3 col-md-6 text-center">
         <div class="mt-5">
           <img src="<%= asset_path('chart.png') %>" width="50" height="50">
           <h3 class="h4 mb-2">Reporting</h3>
           <p class="text-muted mb-0">Keep track of statistics to ensure the next event caters to guests' needs</p>
         </div>
       </div>
     </div>
   </div>
 </section>

 <!-- Call to Action Section -->
 <section class="page-section bg-dark text-white">
   <div class="container text-center">
     <h2 class="mb-4">Need helping planning an event? Not sure where to start?</h2>
     <a class="btn btn-light btn-xl" href="https://blog.capterra.com/how-to-plan-an-event-a-10-step-guide/">Read Up</a>
   </div>
 </section>

 <!-- Contact Section -->
 <section class="page-section" id="contact">
   <div class="container">
     <div class="row justify-content-center">
       <div class="col-lg-8 text-center">
         <h2 class="mt-0">Let's Get In Touch!</h2>
         <hr class="divider light my-4">
         <p class="text-muted mb-5">Ready to start your next event with us? Send us an email and we will get back to you as soon as possible!</p>
       </div>
     </div>
     <div class="row">
       <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
         <i class="fas fa-phone fa-3x mb-3 text-muted"></i>
         <div> (021) 911-1011</div>
       </div>
       <div class="col-lg-4 mr-auto text-center">
         <i class="fas fa-envelope fa-3x mb-3 text-muted"></i>
         <a class="d-block text-dark" href="mailto: contact@rsvpeasy.com">contact@rsvpeasy.com</a>
       </div>
     </div>
   </div>
 </section>
