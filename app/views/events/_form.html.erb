<% provide :head_tags do %>
<meta name='turbolinks-visit-control' content="reload">
<script>
  document.addEventListener("DOMContentLoaded", initMap2)
</script>
<% end %>

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :date_of_event %>
    <%= form.datetime_select(:date_of_event) %>
  </div>

  <div class="field">
    <%= form.label :location  %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :rsvp_cut_off %>
    <%= form.datetime_select(:rsvp_cut_off, :include_seconds => false ) %>
  </div>

  <div class="field">
    <%= form.label "Cover Photo" %>
    <%= form.file_field :cover_photo %>
  </div>

  <div class="field">
      <%= form.label :state, "Active/Draft" %> <br>
      <%= form.select :state, [['Draft Event', 'Draft'],['Active','Active']] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
